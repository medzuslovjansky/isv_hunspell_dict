#!/usr/bin/env zx

await $`mkdir -p dicts`;

for (const lang of ['cs', 'fr', 'pl', 'ru']) {
  for (const ext of ['aff', 'dic']) {
    await $`cp node_modules/dictionary-${lang}/index.${ext} dicts/${lang}.${ext}`;
  }
}

for (const lang of [
  'art-x-interslv',
  'art-Latn-x-interslv',
  'art-Cyrl-x-interslv'
]) {
  for (const ext of ['aff', 'dic']) {
    await $`cp node_modules/@interslavic/dictionary/${lang}.${ext} dicts/${lang}.${ext}`;
  }
}
